

<!DOCTYPE html>
<html lang="en">
    <%-include('externalink.ejs')%> 
   
<head>
    <title>E-shop</title>
        <style>
        .bigImage{
            width: 100%;
            height: 400px;
            background-image: url('<%=product.thumbnail%>');
            background-size: cover;
            background-repeat: no-repeat;
            box-shadow: 5px  5px 10px black;
        }
        .des{
            font-weight: bold;
            
        }
    </style>
    
</head>
<%console.log("------------------------------------------------------------------")%>
<%console.log(product[0].title)%>
<%console.log(Review)%>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6 col-lg-6">
                                <div class="mb-4">
                                    <img id="mainImage" class="bigImage" src="<%=product[0].thumbnail%>"/>
                                </div>
                                <%
                                  let allImages = product[0].imageArray.trim().split(" ");
                                  for(let image of allImages){%>
                                    <img onClick="changeImage(this)" src="<%=image%>" width="100px" height="100px" class="ml-2 mb-2" style="box-shadow: 5px 5px 5px;"/>   
                                  <%}
                                %>
                            </div>
                            <div id="des" class="col-md-4 offset-1">
                                <h1><%=product[0].title%></h1>
                                <br>
                                <h4>Price : <%=product[0].price%> Rs.</h4>
                                <br>
                                <h3>Brand : <%=product[0].brand%></h3>
                                <br>
                                <h3>Category: <%=product[0].category%></h3>
                                <br>
                                <p><%=product[0].description%></p>
                                <br>
                                <h3>Overall rating : <%=product[0].rating%> / 5</h3>
                                <h3 class="fa fa-star"></h3>
                                <br>
                                <h1>-------------------</h1>
                                <%Review.map((review,index)=>{%>
                                <h6>Review : <%=review.text%></h6>
                           <%})%>
                            </div>
                        </div>
                    </div>                   

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
         
    </div>
            <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
   
    <!-- Logout Modal-->
   
    <script>
        function changeImage(currentImageObject){
            var mainImage = document.getElementById("mainImage");
            var temp = mainImage.src;
            mainImage.src = currentImageObject.src;
            currentImageObject.src = temp;
        }
    </script>
</body>

</html>
